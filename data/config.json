{
  "server": {
    "port": 8080,
    "host": "0.0.0.0",
    "static_dir": "web",
    "max_servers": 10,
    "default_memory": 2048
  },
  "java": {
    "auto_detect": true,
    "java_path": "",
    "default_args": [
      "-Xms1G",
      "-Xmx2G",
      "-XX:+UseG1GC"
    ],
    "min_version": 8,
    "max_memory": 8192
  },
  "download": {
    "cores_dir": "data/cores",
    "timeout": 1800000000000,
    "max_retries": 3,
    "chunk_size": 1048576,
    "fastmirror_api": "https://download.fastmirror.net/api/v3"
  },
  "logging": {
    "level": "info",
    "logs_dir": "data/logs",
    "max_file_size": 10485760,
    "max_files": 5,
    "max_age": 7,
    "enable_colors": true
  }
}